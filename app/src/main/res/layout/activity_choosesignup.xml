<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bac_color_4">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="346dp"
        android:layout_height="69dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="32dp"
        android:text="WHO ARE YOU"
        android:textAlignment="center"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/Adminbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Adminbtn"
        android:layout_width="296dp"
        android:layout_height="82dp"
        android:layout_marginBottom="32dp"
        android:text="Admin"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/Studentbtn"
        app:layout_constraintEnd_toEndOf="@+id/Studentbtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Studentbtn"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/Studentbtn"
        android:layout_width="303dp"
        android:layout_height="78dp"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="14dp"
        android:text="Student"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/Trainerbtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Adminbtn" />

    <Button
        android:id="@+id/Trainerbtn"
        android:layout_width="299dp"
        android:layout_height="81dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:text="Trainer"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/Studentbtn"
        app:layout_constraintTop_toBottomOf="@+id/Studentbtn" />
</androidx.constraintlayout.widget.ConstraintLayout>